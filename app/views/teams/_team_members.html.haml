- if @team_members.present?
  = toc.anker 'Wettk√§mpfer', :h2
  = count_table(@team_members, class: 'datatable-team-members') do |ct|
    - ct.col('Name', class: 'col-20', helper_method: :person_link, helper_method_options: { type: :last_name })
    - ct.col('Vorname', class: 'col-20', helper_method: :person_link, helper_method_options: { type: :first_name })
    - ct.col('Geschlecht', :gender_translated, class: 'col-20 small', th_options: { class: 'small' })
    - [:hl, :hb, :gs, :fs, :la].each do |discipline|
      - ct.col(discipline_name_short(discipline), discipline, class: 'col-5', th_options: { title: discipline_name(discipline) })