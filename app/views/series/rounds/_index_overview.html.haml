.container
  = toc.anker(@kind.name, :h3)
  = count_table(@rounds) do |ct|
    - ct.col('Jahr', class: 'col-md-1') { |row|  link_to(row.year, round_link_prefix + [row], data: { round_id: row.id }) }
    - ct.col('Cup-Anzahl', :cup_count_with_status, class: 'col-md-1')
    - ct.col('Disziplinen', class: 'col-md-3') { |row| row.disciplines.map { |d| discipline_image_name_short(d) }.join(" ").html_safe }
    - ct.col('Mannschaften', :team_count, class: 'col-md-1')
    - ct.col('Wettk√§mpfer', :person_count, class: 'col-md-1')