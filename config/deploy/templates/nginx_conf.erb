upstream unicorn_feuerwehrsport-statistik {
  server unix:/tmp/unicorn.feuerwehrsport-statistik.sock fail_timeout=0;
}


server {
  server_name www.feuerwehrsport-statistik.de feuerwehrsport-statistik.de;
  listen 80 ;

  rewrite ^(.*) https://feuerwehrsport-statistik.de$1 permanent;
}


server {

  listen 443 ;
  ssl on;
  ssl_certificate /etc/ssl/certs/www.feuerwehrsport-statistik.de.2016.crt;
  ssl_certificate_key /etc/ssl/private/www.feuerwehrsport-statistik.de.2016.key;
  server_name www.feuerwehrsport-statistik.de; 
  rewrite ^(.*) https://feuerwehrsport-statistik.de$1 permanent;
}

  

server {

  listen 443 ;
  ssl on;
  ssl_certificate /etc/ssl/certs/www.feuerwehrsport-statistik.de.2016.crt;
  ssl_certificate_key /etc/ssl/private/www.feuerwehrsport-statistik.de.2016.key;


  client_max_body_size 4G;
  keepalive_timeout 10;

  error_page 500 502 504 /500.html;
  error_page 503 @503;

  server_name feuerwehrsport-statistik.de;
  root /srv/feuerwehrsport-statistik/current/public;
  try_files $uri/index.html $uri  @rails_cache_feuerwehrsport-statistik;

  location @rails_cache_feuerwehrsport-statistik {
    root /srv/feuerwehrsport-statistik/current/public/cache;
    try_files $uri $uri/_index.html $uri.html @unicorn_feuerwehrsport-statistik;
  }

  

  location @unicorn_feuerwehrsport-statistik {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;

    proxy_set_header X-Forwarded-Proto https;

    proxy_pass http://unicorn_feuerwehrsport-statistik;
    # limit_req zone=one;
    access_log /srv/feuerwehrsport-statistik/shared/log/nginx/nginx.access.log;
    error_log /srv/feuerwehrsport-statistik/shared/log/nginx/nginx.error.log;
  }

  location ^~ /assets/ {
    gzip_static on;
    expires max;
    add_header Cache-Control public;
  }

  location = /50x.html {
    root html;
  }

  location = /404.html {
    root html;
  }

  location @503 {
    error_page 405 = /system/maintenance.html;
    if (-f $document_root/system/maintenance.html) {
      rewrite ^(.*)$ /system/maintenance.html break;
    }
    rewrite ^(.*)$ /503.html break;
  }
  
  if ($uri ~* ^/apple-touch-icon.*\.png$) {
    return 404;
  }

  if ($request_method !~ ^(GET|HEAD|PUT|POST|DELETE|OPTIONS)$ ){
    return 405;
  }

  if (-f $document_root/system/maintenance.html) {
    return 503;
  }

  location ~ \.php$ {
    return 405;
  }
}